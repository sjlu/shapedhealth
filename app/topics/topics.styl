.startTopic
  margin-top: 20px

  // padding: 0 30px

  input
    margin-bottom: 5px

.allTopics
  margin-top: 30px

  .panel-heading
    font-size: 20px
    font-weight: 600

  .topicItem
    display: block
    padding: 15px 21px
    border-bottom: 1px solid #e5e5e5
    color: black;

    &:hover
    &:active
      background-color: darken(#fff, 2%)
      text-decoration: none

      .headline
        span
          text-decoration: underline

    &:last-child
      border-bottom: 0

    .headline
      font-size: 18px

      small
        font-size: 70%
        color: #888

    .participants
      margin-top: 3px
      margin-bottom: 3px

      .participant
        margin-left: 2px
        width: 20px
        height: 20px
        border-radius: 20px

        &.creator
          box-shadow: 0 0 2px #428bca

.topicDetail
  .headline
    span
      padding: 2px 5px 4px 7px
      border: 1px solid
      border-radius: 50px
      color: #428bca
      background-color: #f5f5f5
      font-size: 18px

  table
    width: 100%

    td:first-child
      width: 50px
      vertical-align: top

    .newComment
      button
        margin-top: 5px

  .comment
    font-size: 16px

  .picture
    margin-top: 3px
    width: 40px
    height: 40px
    border-radius: 40px
